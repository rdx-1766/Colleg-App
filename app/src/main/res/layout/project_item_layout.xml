<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/darkblue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Project Title"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="@color/darkblue"/>

        <TextView
            android:id="@+id/developer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Developer"
            android:textSize="@dimen/title_size2"
            android:textColor="@color/darkblue"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Pavan Kumar"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/title_size2"
            android:textColor="@color/darkblue"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="This is a good project"
            android:textSize="@dimen/text_size"
            android:textColor="@color/textColor"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/link"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/github_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/github"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="GitHub Icon"/>

            <TextView
                android:id="@+id/github_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GitHub"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report in PDF"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/orange"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
